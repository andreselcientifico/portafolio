---
import { Image } from 'astro:assets'
import perfil_img from '@/assets/perfil.webp'

const props = Astro.props
---

<section class="flex items-center justify-center text-white min-h-screen p-8">
  <div class="flex items-center gap-18 flex-col lg:flex-row">
    <div class="text-left">
      <h1 class="text-4xl font-bold" aria-label="Andrés Alfonso Pérez Rodríguez">Andrés Alfonso Pérez Rodríguez</h1>
      <p class="text-xl text-gray-400" aria-label="Desarrollador full stack con conocimientos en inteligencia artificial">Desarrollador full stack con conocimientos en inteligencia artificial</p>
      <div class="flex items-center gap-4 mt-4">
        <a
          href="https://github.com/andreselcientifico"
          target="_blank"
          class="text-gray-400 text-2xl"
          aria-label="GitHub Profile"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
          >
            <g
              fill="none"
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
            >
              <path
                d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5c.08-1.25-.27-2.48-1-3.5c.28-1.15.28-2.35 0-3.5c0 0-1 0-3 1.5c-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.4 5.4 0 0 0 4 9c0 3.5 3 5.5 6 5.5c-.39.49-.68 1.05-.85 1.65S8.93 17.38 9 18v4"
              ></path>
              <path d="M9 18c-4.51 2-5-2-7-2"></path>
            </g>
          </svg>
        </a>
        <a href="mailto:andreselcientifico@gmail.com" class="text-gray-400 text-2xl" aria-label="Email Andrés Alfonso Pérez Rodríguez">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
          >
            <g
              fill="none"
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
            >
              <path
                d="M22 6c0-1.1-.9-2-2-2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2zm-2 0l-8 5l-8-5zm0 12H4V8l8 5l8-5z"
              ></path>
            </g>
          </svg>
        </a>
        <a
          href="https://www.linkedin.com/in/andres-alfonso-569409128"
          target="_blank"
          class="text-gray-400 text-2xl"
          aria-label="LinkedIn Profile"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
          >
            <path
              fill="currentColor"
              d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2zm-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93zM6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.68 1.68 0 0 0-1.68 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
    <div>
      <Image
        src={perfil_img}
        widths={[240, 540, 720, perfil_img.width]}
        sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${perfil_img.width}px`}
        alt="Foto de perfil de Andrés Alfonso Pérez Rodríguez"
        class="w-64 h-74 rounded-full border-2 border-gray-700"
        loading="eager"
      />
    </div>
  </div>
  <a href="#specialization" id="scroll-arrow" class="absolute bottom-6 animate-bounce text-gray-400 hover:text-white text-3xl" aria-label="Scroll down to specialization">
    ↓
  </a>
</section>

<script>
  window.addEventListener('scroll', () => {
    const arrow = document.getElementById('scroll-arrow');
    if (arrow) { 
      if (window.scrollY > 50) {
        arrow.style.opacity = '0';
      } else {
        arrow.style.opacity = '1';
      }
    }
  });
</script>