---
import { Image } from "astro:assets";
import pyrumind_img from "@/assets/pyrumind_1.webp";
import image_art_img from "@/assets/image-art.webp";
import avis_img from "@/assets/avis.webp";
import nomas_img from "@/assets/nomas.webp";
import interpolador_img from "@/assets/interpolador.webp";
import interpolador1_img from "@/assets/interpolador1.webp";
import interpolador2_img from "@/assets/interpolador2.webp";

const props = Astro.props;
---

<!-- Sección de Proyectos: Muestra distintas tarjetas con información sobre cada proyecto -->
<section
    id="projects"
    class="bg-gray-900 text-white min-h-screen p-8 flex flex-col items-center"
>
    <!-- Contenedor de tarjetas en formato grid responsive -->
    <div class="grid grid-cols-1 sm:grid-cols-2 w-full max-w-5xl justify-items-center gap-4">
        
        <!-- Tarjeta del proyecto "Pyrumind" -->
        <div class="card bg-base-100 w-full h-full shadow-sm flex flex-col">
            <!-- Imagen representativa del proyecto -->
            <Image
                src={pyrumind_img}
                alt="Pyrumind"
                class="w-full h-40 object-cover rounded-t-lg"
            />
            <!-- Cuerpo de la tarjeta con título, descripción y tecnologías utilizadas -->
            <div class="card-body flex flex-col justify-between text-start">
                <h2 class="card-title text-center">Pyrumind</h2>
                <p class="text-gray-400">
                    Pyrumind es una plataforma web para crear, leer y traducir libros, facilitando el acceso a una amplia gama de documentos.
                </p>
                <p>
                    Conocimientos: HTML, CSS, JavaScript, Tailwind, Astro, Django
                </p>
            </div>
        </div>
        
        <!-- Tarjeta del proyecto "Avis" -->
        <div class="card bg-base-100 w-full h-full shadow-sm flex flex-col">
            <!-- Imagen representativa del proyecto -->
            <Image
                src={avis_img}
                alt="Avis"
                class="w-full h-40 object-cover rounded-t-lg"
            />
            <!-- Cuerpo de la tarjeta con título, descripción y tecnologías utilizadas -->
            <div class="card-body flex flex-col justify-between text-start">
                <h2 class="card-title text-center">Avis</h2>
                <p class="text-gray-400">
                    Avis es el sitio web de una pastelería, donde se destacan diseños atractivos y deliciosas propuestas.
                </p>
                <p>
                    Conocimientos: HTML, CSS, JavaScript, Django
                </p>
            </div>
        </div>
        
        <!-- Tarjeta del proyecto "Nomas" -->
        <div class="card bg-base-100 w-full h-full shadow-sm flex flex-col">
            <!-- Imagen representativa del proyecto -->
            <Image
                src={nomas_img}
                alt="Nomas"
                class="w-full h-40 object-cover rounded-t-lg"
            />
            <!-- Cuerpo de la tarjeta con título, descripción y tecnologías utilizadas -->
            <div class="card-body flex flex-col justify-between text-start">
                <h2 class="card-title text-center">Nomas</h2>
                <p class="text-gray-400">
                    Nomas es un portal de noticias que te mantiene informado con contenido actualizado y de calidad.
                </p>
                <p>
                    Conocimientos: HTML, CSS, JavaScript, Astro, Tailwind
                </p>
            </div>
        </div>
        
        <!-- Tarjeta del proyecto "Interpolador de Frame" -->
        <div class="card bg-base-100 w-full h-full shadow-sm flex flex-col">
            <!-- Carrusel de imágenes para mostrar diferentes vistas del proyecto -->
            <div class="carousel w-full h-40 rounded-t-lg overflow-hidden">
                <div id="item1" class="carousel-item w-full">
                    <Image
                        src={interpolador_img}
                        alt="Interpolador de Frame - vista 1"
                        class="w-full h-40 object-cover"
                    />
                </div>
                <div id="item2" class="carousel-item w-full">
                    <Image
                        src={interpolador1_img}
                        alt="Interpolador de Frame - vista 2"
                        class="w-full h-40 object-cover"
                    />
                </div>
                <div id="item3" class="carousel-item w-full">
                    <Image
                        src={interpolador2_img}
                        alt="Interpolador de Frame - vista 3"
                        class="w-full h-40 object-cover"
                    />
                </div>
            </div>
            <!-- Cuerpo de la tarjeta con controles del carrusel, título, descripción y tecnologías utilizadas -->
            <div class="card-body flex flex-col justify-between text-start">
                <!-- Controles para navegar entre las imágenes del carrusel -->
                <div class="flex w-full justify-center gap-2">
                    <a href="#item1" class="btn btn-xs">1</a>
                    <a href="#item2" class="btn btn-xs">2</a>
                    <a href="#item3" class="btn btn-xs">3</a>
                </div>
                <h2 class="card-title text-center">Interpolador de Frame</h2>
                <p class="text-gray-400">
                    Interpolador de Frame es un proyecto personal diseñado para optimizar la fluidez en la captura de video, mejorando la transición entre fotogramas.
                </p>
                <p>
                    Conocimientos: Python, OpenCV
                </p>
            </div>
        </div>
        
        <!-- Tarjeta para proyectos en construcción o privados -->
        <div class="card bg-base-100 w-full h-full shadow-sm flex flex-col">
            <!-- Imagen representativa que indica "en construcción" -->
            <Image
                src={image_art_img}
                alt="Proyectos en construcción"
                class="w-full h-40 object-cover rounded-t-lg"
            />
            <!-- Cuerpo de la tarjeta con título, descripción y enlace al perfil de GitHub -->
            <div class="card-body flex flex-col justify-between text-start">
                <h2 class="card-title text-center">
                    En construcción - Proyectos privados y más
                </h2>
                <p class="text-gray-400">
                    Actualmente, desarrollo una serie de proyectos innovadores, tanto privados como públicos. Puedes descubrir más en mi perfil de GitHub.
                </p>
                <!-- Enlace al perfil de GitHub -->
                <a
                    href="https://github.com/andreselcientifico"
                    target="_blank"
                    class="text-2xl"
                    aria-label="Perfil de GitHub"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                    >
                        <g
                            fill="none"
                            stroke="currentColor"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                        >
                            <path
                                d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5c.08-1.25-.27-2.48-1-3.5c.28-1.15.28-2.35 0-3.5c0 0-1 0-3 1.5c-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.4 5.4 0 0 0 4 9c0 3.5 3 5.5 6 5.5c-.39.49-.68 1.05-.85 1.65S8.93 17.38 9 18v4"
                            ></path>
                            <path d="M9 18c-4.51 2-5-2-7-2"></path>
                        </g>
                    </svg>
                </a>
            </div>
        </div>
        
    </div>
</section>

